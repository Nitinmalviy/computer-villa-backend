{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",  // or "ES6"
      "lib": ["ES2020"],
      "outDir": "dist",
      "baseUrl": "src",
      "sourceMap": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "paths": {
        "middleware/*": ["middleware/*"],
        "third-party-controllers/*": ["src/third-party-controllers/*"]
      }
    },
    "include": ["src/**/*"]
  }
  